def recursive(n):
    if n == 0:
        return 1
    else:
        return n * recursive(n - 1)

def iterative(n):
    fact = 1
    for i in range(1, n + 1):
        fact = fact * i
    return fact

number = int(input("Enter a number to find its factorial: "))

recursive_r = recursive(number)
print("The factorial of", number, "using recursion is:", recursive_r)

iterative_r = iterative(number)
print("The factorial of", number, "using iteration is:", iterative_r)