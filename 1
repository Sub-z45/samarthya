def prime(n):
    if n <= 1:
        return False
    l=int((n+1)/2)
    for i in range(2,l):
        if n % i == 0:
            return False
 
    return True

number = int(input("Enter a number: "))
if prime(number):
    print(number, "is a prime number.")
else:
    print(number, "is not a prime number.")
